extends layout

block content
  .container.js-container
    .episodes
      h1=series.title
      p
        a(href='/a/edit/series/' + series.slug)
          small Edit this series
      p
        a(href='/a/new/series/' + series._id + '/' + series.slug + '/episode') Post a new episode
      hr
      ul.list-unstyled
        each episode, index in episodes
          li(class='border-bottom border-light ' + (index === 0 ? 'border-top' : ''))
            a(href='/series/' + series.slug + '/ep/' + episode.no)
              div.media
                img(src=episode.contents[0] width=80 height=80)
                div.media-body.ml-2
                  p= '(Ep.' + episode.no + ') ' + episode.title
                  p.mb-0
                     a(href='/a/edit/series/' + series._id + '/' + series.slug + '/episode' )
                      small Edit this episode
        else
          li No episodes.
